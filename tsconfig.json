{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "declaration": true,
    "declarationMap": true,  // Optional: Generates .d.ts.map files for debugging
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,  // Emit output files
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,  // Use incremental builds
    "tsBuildInfoFile": "./dist/.tsbuildinfo",  // Store incremental build info in dist
    "outDir": "dist",  // Output directory for built files
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
